<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Reports Demo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.8.2/css/bulma.min.css" />
  </head>
  <body>
    <script id="template-error" type="text/x-handlebars-template">
      <article class="message is-warning">
        <div class="message-header">
          <p>Oops1</p>
        </div>
        <div class="message-body">
          <p>Cannot display data</p>
        </div>
      </article>
    </script>
    <script id="template-reports-numbers" type="text/x-handlebars-template">
        <div class="heading">Total Alerts</div>
        <div class="title">\{{total_alerts}}</div>
    </script>
    <script id="template-reports" type="text/x-handlebars-template">
      <div class="table-container">
        <table class="table is-hoverable is-fullwidth">
          <thead>
            <tr>
              <th>Name</th>
              <th>Host</th>
            </tr>
          </thead>
          <tbody>
            \{{#each items}}
            <tr>
              <td>\{{host.name}}</td>
              <td>\{{host.downstream_host}}</td>
            </tr>
            \{{/each}}
          </tbody>
        </table>
      </div>
    </script>
    <header class="hero" style="background-color: #ED2939 !important;">
      <div class="hero-head">
        <nav class="nav has-shadow">
          <div class="nav-left">
            <a class="nav-item">
            <img class="logo" src="/img/WSD-Ident-White.svg" alt="" style="width:40px; height: 40px; margin: 10px">
            </a>
          </div>
        </nav>
      </div>
    </header>
    <div class="section">
      <div class="columns">
        <aside class="column is-2">
          <nav class="menu">
            <p class="menu-label">
              General
            </p>
            <ul class="menu-list">
              <li><a class="{{#if active.home}}is-active{{/if}}" href="/">Dashboard</a></li>
              <li><a class="{{#if active.reports}}is-active{{/if}}" href="/reports">Reports</a></li>
            </ul>
          </nav>
        </aside>
        {{{body}}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.6/handlebars.min.js"></script>
        <script src="js/script.js"></script>
        <script src="js/chart.js"></script>
      </div>
    </div>
  </body>
</html>